extends base

block content 
    form(method="post" enctype="multipart/form-data").edit-profile__form
        label(for="avatar") 아바타
        input(type="file", name="avatar" id="avatar" accept="image/*")
        input(placeholder="이름" name="name", type="text" required value=loggedInUser.name)
        input(placeholder="이메일" name="email", type="email" required value=loggedInUser.email )
        input(placeholder="아이디" name="username", type="text" required value=loggedInUser.username)
        input(placeholder="지역" name="location", type="text" value=loggedInUser.location)
        input(style="text-align: center" type="submit" value="수정사항 적용")
        if !loggedInUser.socialOnly
            div.edit-profile__password
            a(href="change-password") 비밀번호 변경 &rarr;