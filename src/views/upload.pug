extend base

block content 
    if errorMessage
        span=errorMessage
    form(method="post") 
        input(name="title", placeholder="Title", required, type="text", maxlength=80)
        input(name="description", placeholder="Description", required, type="text", minlength=0, maxlength=100)
        input(name="hashtags", placeholder="Hashtag separated by comma", required, type="text")
        input(type="submit", value="Upload Video")